
public class problem7 {
	public static void main(String[] args) {
		mystery(-1);
		mystery2(10);
	}
	public static void mystery(int x){ //10
	  if (x == 1) {
	    System.out.println("pooh");
	  }
	  else if (x % 2 == 0) // x = 10, x = 4, x = 2, 
	  {
	    System.out.println(x);    
	    mystery(x / 2);           
	  }
	  else
	  { 
	    mystery(x - 1);
	  }
	}
	public static void mystery2(int x){ //10
		  if (x == 1) {
		    System.out.println("pooh");
		  }
		  else if (x % 2 == 0) // 
		  {
		    mystery(x / 2);  
		    System.out.println(x); 
		  }
		  else
		  { 
		    mystery(x - 1);
		  }
		}
}
