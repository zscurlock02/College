import java.io.File;
import java.util.ArrayList;
import java.util.Scanner;

public class ContactDirectory {
	private ArrayList<Contact> directory;
	  public ContactDirectory(){
	    directory = new ArrayList<>();
	  }
	  public void addContact(Contact c){
	    directory.add(c);
	  }

	  public void addFromFile(String filename) throws FileNotFoundException {
	    File f = new File(filename);
	    Scanner scnr = new Scanner(f);

	    while (scnr.hasNextLine()){ // hasNextLine() checks if a next line exists
	      String line = scnr.nextLine(); 
	      String[] entriesInLine = line.split(",");
	      String name = entriesInLine[0];
	      String phoneNumber = entriesInLine[1].strip();
	      directory.add(new Contact(name, phoneNumber));  
	    }
	  }
	  public String lookUp(String name){
	    for(int i = 0; directory.size(); i++){
	      if(directory.get(i).getName().equals(name)){
	        return directory.get(i).getPhoneNumber();
	        }
	    }
	    return null;
	  }
}
