	    int mid = (i + j) / 2;
	    boolean leftOk = whoKnows(arr, i, mid);
	    boolean rightOk = whoKnows(arr, mid + 1, j);
	    return leftOk && rightOk && arr[mid] <= arr[mid + 1];
	  }
