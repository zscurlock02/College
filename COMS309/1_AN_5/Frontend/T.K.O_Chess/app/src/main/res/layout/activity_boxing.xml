<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey">

    <ImageButton
        android:id="@+id/BoxingMenuBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="Opens the boxing options menu."
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu" />

    <ImageView
        android:id="@+id/BoxingRingImgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF5722"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23000002"
        app:srcCompat="@drawable/boxingring" />

    <ImageView
        android:id="@+id/Player2BlockImg"
        android:layout_width="65dp"
        android:layout_height="97dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="129dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/BoxingRingImgView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BoxingRingImgView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/block" />

    <ImageView
        android:id="@+id/Player1BlockImg"
        android:layout_width="65dp"
        android:layout_height="97dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="129dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:rotationY="180"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/BoxingRingImgView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BoxingRingImgView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/block" />

    <ImageView
        android:id="@+id/Player2KickImg"
        android:layout_width="114dp"
        android:layout_height="98dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="129dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/BoxingRingImgView"
        app:layout_constraintEnd_toEndOf="@+id/BoxingRingImgView"
        app:layout_constraintTop_toTopOf="@+id/BoxingRingImgView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/kick" />

    <ImageView
        android:id="@+id/Player1KickImg"
        android:layout_width="114dp"
        android:layout_height="98dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="129dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:rotationY="180"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/BoxingRingImgView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BoxingRingImgView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/kick" />

    <ImageView
        android:id="@+id/Player2JabImg"
        android:layout_width="75dp"
        android:layout_height="98dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="128dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/BoxingRingImgView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BoxingRingImgView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/jab" />

    <ImageView
        android:id="@+id/Player1JabImg"
        android:layout_width="75dp"
        android:layout_height="98dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="128dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:rotationY="180"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/BoxingRingImgView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BoxingRingImgView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/jab" />

    <TextView
        android:id="@+id/GameNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Total Knock Out!"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RoundNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Round 0"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/GameNameText"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/GameNameText"
        app:layout_constraintTop_toBottomOf="@+id/GameNameText" />



    <ImageView
        android:id="@+id/Player1Heart6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@+id/Player1Heart5"
        app:layout_constraintTop_toBottomOf="@+id/Player1Heart1"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/Player1Heart5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@+id/Player1Heart4"
        app:layout_constraintTop_toBottomOf="@+id/Player1Heart1"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/Player1Heart4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="@+id/Player1Heart1"
        app:layout_constraintTop_toBottomOf="@+id/Player1Heart1"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/Player1Heart3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@+id/Player1Heart2"
        app:layout_constraintTop_toBottomOf="@+id/Player1NameText"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/Player1Heart2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@+id/Player1Heart1"
        app:layout_constraintTop_toBottomOf="@+id/Player1NameText"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/Player1Heart1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="@+id/Player1NameText"
        app:layout_constraintTop_toBottomOf="@+id/Player1NameText"
        app:srcCompat="@drawable/heart" />

    <TextView
        android:id="@+id/Player1NameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="30dp"
        android:text="Player1 Name"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/BoxingRingImgView"
        app:layout_constraintStart_toStartOf="parent" />



    <ImageView
        android:id="@+id/Player2Heart6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toStartOf="@+id/Player2Heart5"
        app:layout_constraintTop_toBottomOf="@+id/Player2Heart1"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/Player2Heart5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toStartOf="@+id/Player2Heart4"
        app:layout_constraintTop_toBottomOf="@+id/Player2Heart1"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/Player2Heart4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@+id/Player2NameText"
        app:layout_constraintTop_toBottomOf="@+id/Player2Heart1"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/Player2Heart3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toStartOf="@+id/Player2Heart2"
        app:layout_constraintTop_toBottomOf="@+id/Player2NameText"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/Player2Heart2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toStartOf="@+id/Player2Heart1"
        app:layout_constraintTop_toBottomOf="@+id/Player2NameText"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/Player2Heart1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@+id/Player2NameText"
        app:layout_constraintTop_toBottomOf="@+id/Player2NameText"
        app:srcCompat="@drawable/heart" />

    <TextView
        android:id="@+id/Player2NameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        android:text="Opponent"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/BoxingRingImgView"
        app:layout_constraintEnd_toEndOf="@+id/BoxingRingImgView" />



    <Button
        android:id="@+id/BlockBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="162dp"
        android:backgroundTint="#00A0FF"
        android:text="Block"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/BoxingRingImgView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/BoxingRingImgView"
        app:layout_constraintTop_toBottomOf="@+id/SelectMoveText" />

    <Button
        android:id="@+id/JabBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="@color/soft_blue"
        android:text="Jab"
        app:layout_constraintEnd_toStartOf="@+id/BlockBtn"
        app:layout_constraintTop_toBottomOf="@+id/BlockBtn" />

    <Button
        android:id="@+id/KickBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="0dp"
        android:backgroundTint="@color/soft_blue"
        android:text="Kick"
        app:layout_constraintStart_toEndOf="@+id/BlockBtn"
        app:layout_constraintTop_toBottomOf="@+id/BlockBtn" />

    <Button
        android:id="@+id/ConfirmMoveBtn"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/soft_blue"
        android:text="Confirm Move"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/KickBtn"
        app:layout_constraintStart_toStartOf="@+id/JabBtn"
        app:layout_constraintTop_toBottomOf="@+id/KickBtn" />

    <TextView
        android:id="@+id/SelectMoveText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Select your move"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/BoxingRingImgView"
        app:layout_constraintStart_toStartOf="@+id/BoxingRingImgView"
        app:layout_constraintTop_toBottomOf="@+id/BoxingRingImgView" />

    <LinearLayout
        android:id="@+id/OptionsLayout"
        android:layout_width="125dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/BoxingMenuBtn"
        app:layout_constraintTop_toTopOf="@+id/BoxingMenuBtn"></LinearLayout>

    <LinearLayout
        android:id="@+id/GameOverLayout"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:background="@color/very_light_grey"
        android:orientation="vertical"
        android:visibility="invisible"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </LinearLayout>

    <TextView
        android:id="@+id/Player1Wins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="Wins: 0"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/Player1NameText"
        app:layout_constraintTop_toBottomOf="@+id/RoundNumberText" />

    <TextView
        android:id="@+id/Player2Wins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:text="Wins: 0"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/Player2NameText"
        app:layout_constraintTop_toBottomOf="@+id/RoundNumberText" />

</androidx.constraintlayout.widget.ConstraintLayout>